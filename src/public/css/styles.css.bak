  .hero-text h1 {
    font-size: 2rem;
  }

  .page-container h2 {
    font-size: 1.5rem;
  }
}

/* FAQ */
/* Contenedor principal */
.page-container {
  max-width: 900px;
  margin: 40px auto;
  padding: 0 20px;
  font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
  color: #333;
  padding-top: 60px;
}

/* Título */
.page-container h1 {
  text-align: center;
  margin-bottom: 30px;
  font-size: 2.2rem;
  color: #2d3748;
}

/* Cada ítem de FAQ */
.faq-item {
  border-bottom: 1px solid #cbd5e0;
  padding: 15px 0;
}

/* Botón de pregunta */
.faq-question {
  background: none;
  border: none;
  width: 100%;
  text-align: left;
  font-size: 1.1rem;
  font-weight: 600;
  cursor: pointer;
  padding: 10px 0;
  color: #2d3748;
  position: relative;
  transition: color 0.3s ease;
}

/* Icono de + o - */
.faq-question::after {
  content: "+";
  position: absolute;
  right: 0;
  font-size: 1.3rem;
  transition: transform 0.3s ease;
}

/* Estado activo */
.faq-question.active {
  color: #4fd1c5;
}

.faq-question.active::after {
  content: "-";
  transform: rotate(180deg);
}

/* Respuesta oculta por defecto */
.faq-answer {
  display: none;
  padding-top: 10px;
  color: #555;
  font-size: 1rem;
  line-height: 1.5;
  animation: fadeIn 0.3s ease-in-out;
}

/* Animación */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(-5px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Hover */
.faq-question:hover {
  color: #319795;
}

